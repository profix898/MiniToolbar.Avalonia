<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:toolbar="clr-namespace:MiniToolbar.Avalonia">
  
    <!-- Toolbar -->
    <ControlTheme x:Key="{x:Type toolbar:Toolbar}" TargetType="toolbar:Toolbar">
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderBrush="{DynamicResource ToolbarBorderColor}">
                    <Panel Margin="0" Background="{DynamicResource ToolbarBackgroundColor}">
                        <StackPanel x:Name="PART_ToolbarPanel" Orientation="{TemplateBinding Orientation}" />
                    </Panel>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

</ResourceDictionary>